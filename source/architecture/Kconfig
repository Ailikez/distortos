if ARCHITECTURE_ARM
source source/architecture/ARM/Kconfig
endif

comment "Generic architecture options"

config ARCHITECTURE_FPU
	bool "Enable FPU"
	default y
	depends on ARCHITECTURE_HAS_FPU
	help
		Enables FPU.

config ARCHITECTURE_HAS_FPU
	bool
	default n

config ARCHITECTURE_ARM
	bool
	default n
