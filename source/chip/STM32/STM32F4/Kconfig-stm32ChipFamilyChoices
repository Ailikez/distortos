config CHIP_STM32F4
	bool "STM32F4"
	select ARCHITECTURE_ARMV7_M
	select ARCHITECTURE_ARM_CORTEX_M4
	select ARCHITECTURE_HAS_FPU
	select CHIP_HAS_SPI1
	select CHIP_STM32_GPIOV2
	select CHIP_STM32_GPIOV2_HAS_4_AF_BITS
	select CHIP_STM32_GPIOV2_HAS_HIGH_SPEED
	select CHIP_STM32_SPIV1
	select CHIP_STM32_SPIV1_HAS_CR2_FRF_BIT
	select CHIP_STM32_SPIV1_HAS_I2S
	select CHIP_STM32_SPIV1_HAS_SR_FRE_BIT
	select CHIP_STM32_USARTV1
	select CHIP_STM32_USARTV1_HAS_CR1_OVER8_BIT
	select CHIP_STM32_USARTV1_HAS_CR3_ONEBIT_BIT
	select CHIP_STM32_USARTV1_HAS_USART1
	select CHIP_STM32_USARTV1_HAS_USART2
	select CHIP_STM32_USARTV1_HAS_USART6
	help
		STM32F4 chip family
