choice
	prompt "STM32F4 chip"
	default CHIP_STM32F407VGT
	depends on CHIP_STM32F4
	help
		Select STM32F4 chip

config CHIP_STM32F405OEY
	bool "STM32F405OEY"
	select CHIP_STM32F40
	select CHIP_STM32F405
	select CHIP_STM32F405O
	select CHIP_STM32F405OE
	help
		STMicroelectronics STM32F405OEY chip

