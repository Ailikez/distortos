source "$DISTORTOS_PATH/source/board/STM32/STM32F1/NUCLEO-F103RB/Kconfig"
source "$DISTORTOS_PATH/source/board/STM32/STM32F4/32F429IDISCOVERY/Kconfig"
source "$DISTORTOS_PATH/source/board/STM32/STM32F4/NUCLEO-F401RE/Kconfig"
source "$DISTORTOS_PATH/source/board/STM32/STM32F4/STM32F4DISCOVERY/Kconfig"

comment "Generic board options"

config BOARD_LEDS_ENABLE
	bool "Enable LEDs"
	depends on BOARD_TOTAL_LEDS != 0
	default y
	help
		Enables board LEDs.

config BOARD_TOTAL_LEDS
	int
	default 0

config BOARD
	string
	default "Custom" if BOARD_CUSTOM
